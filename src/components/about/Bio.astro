---
interface Props {
  name: string;
  title: string;
  bio: string;
  image: string;
}

const { name, title, bio, image } = Astro.props;
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
  <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
    <div class="relative">
      <img 
        src={image} 
        alt={name}
        class="w-full h-[600px] object-cover rounded-lg"
      />
    </div>
    <div>
      <h1 class="text-4xl font-bold mb-4">{name}</h1>
      <p class="text-xl text-gray-600 mb-6">{title}</p>
      <div class="prose prose-lg">
        <p>{bio}</p>
      </div>
    </div>
  </div>
</section>