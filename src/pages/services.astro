---
import Layout from '../layouts/Layout.astro';
import PricingCard from '../components/services/PricingCard.astro';

const packages = [
  {
    title: "Wedding Package",
    price: "$2,499",
    description: "Complete wedding day coverage",
    features: [
      "8 hours of coverage",
      "2 photographers",
      "Online gallery",
      "High-resolution images",
      "Engagement session"
    ]
  },
  {
    title: "Portrait Session",
    price: "$299",
    description: "Professional portrait photography",
    features: [
      "1-hour session",
      "Multiple locations",
      "Online gallery",
      "10 edited photos",
      "Print release"
    ]
  },
  {
    title: "Event Coverage",
    price: "$799",
    description: "Professional event photography",
    features: [
      "4 hours of coverage",
      "Event highlights",
      "Online gallery",
      "Quick turnaround",
      "Commercial use rights"
    ]
  }
];
---

<Layout 
  title="Services - PhotoLens"
  description="Explore our photography services and packages"
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-20">
    <h1 class="text-4xl font-bold text-center mb-12">Our Services</h1>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {packages.map(pkg => (
        <PricingCard {...pkg} />
      ))}
    </div>
  </div>
</Layout>